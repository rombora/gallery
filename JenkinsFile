pipeline {
    agent any

    tools {
        nodejs "nodejs20"
    }

    stages {
        stage ("clone repository") {
            steps {
                git "https://github.com/rombora/gallery"
            }
        }
        
        stage ("build") {
            steps {
                sh "npm install"
            }
        }

        stage ("test") {
            steps {
                sh "npm test"
            }
        }
    }
}
